<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sistema de Inventario - Conteo en Vivo</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <style>
        :root {
            --wa-green: #25D366;
            --wa-dark: #128C7E;
            --bg: #f0f7f4;
            --card: #ffffff;
            --text: #2d3748;
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.07);
            --border: #e2e8f0;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #e6f5ee, #c2e8d6);
            color: var(--text);
            min-height: 100vh;
            padding: 20px;
            padding-top: 90px;
            /* Espacio para la navbar fija */
        }

        /* ===== NAVBAR ===== */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 70px;
            background: var(--card);
            box-shadow: var(--shadow);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
            z-index: 1000;
        }

        .navbar .logo-title {
            display: flex;
            align-items: center;
            gap: 14px;
            font-weight: 600;
            font-size: 20px;
            color: var(--wa-dark);
        }

        .navbar .logo-title .logo-small {
            width: 40px;
            height: 40px;
            background: var(--wa-green);
            border-radius: 50%;
            box-shadow: 0 4px 12px rgba(37, 211, 102, .4);
        }

        .navbar .nav-links {
            display: flex;
            gap: 20px;
        }

        .navbar .nav-links a {
            padding: 10px 20px;
            background: var(--wa-green);
            color: white;
            font-weight: 600;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.2s;
            box-shadow: 0 4px 12px rgba(37, 211, 102, .3);
        }

        .navbar .nav-links a:hover {
            background: var(--wa-dark);
            transform: translateY(-2px);
        }

        /* ===== RESTO DEL ESTILO (sin cambios) ===== */
        .container {
            max-width: 620px;
            margin: 0 auto;
        }

        .card {
            background: var(--card);
            border-radius: 24px;
            box-shadow: var(--shadow);
            padding: 40px 30px;
            text-align: center;
        }

        .logo {
            width: 84px;
            height: 84px;
            background: var(--wa-green);
            border-radius: 50%;
            margin: 0 auto 20px;
            box-shadow: 0 6px 20px rgba(37, 211, 102, .35);
        }

        h1 {
            font-size: 28px;
            font-weight: 600;
            color: var(--wa-dark);
            margin-bottom: 12px;
        }

        .subtitle {
            color: #555;
            margin-bottom: 25px;
        }

        textarea {
            width: 100%;
            min-height: 180px;
            padding: 16px;
            border: 2px solid var(--border);
            border-radius: 14px;
            font-family: inherit;
            font-size: 15px;
            resize: vertical;
        }

        textarea:focus {
            outline: none;
            border-color: var(--wa-green);
            box-shadow: 0 0 0 4px rgba(37, 211, 102, .15);
        }

        .stats {
            display: flex;
            justify-content: space-around;
            background: rgba(37, 211, 102, .1);
            padding: 16px;
            border-radius: 14px;
            margin: 20px 0;
            font-weight: 600;
        }

        .stats div span {
            display: block;
            font-size: 28px;
            color: var(--wa-green);
        }

        .summary {
            background: #f8fff9;
            border: 2px solid var(--wa-green);
            border-radius: 16px;
            padding: 20px;
            text-align: left;
            white-space: pre-line;
            font-size: 15px;
            line-height: 1.7;
            min-height: 80px;
            margin-bottom: 20px;
        }

        .loading {
            color: var(--wa-dark);
            font-style: italic;
        }

        .counter {
            text-align: right;
            margin-top: 8px;
            font-weight: 500;
            color: var(--wa-dark);
        }

        .actions {
            display: flex;
            gap: 16px;
            justify-content: center;
            margin-top: 10px;
        }

        .btn {
            padding: 14px 24px;
            font-size: 16px;
            font-weight: 600;
            color: white;
            background: var(--wa-green);
            border: none;
            border-radius: 14px;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(37, 211, 102, .3);
            transition: all 0.2s;
        }

        .btn:hover {
            background: var(--wa-dark);
            transform: translateY(-2px);
        }

        .btn:disabled {
            background: #a0aec0;
            cursor: not-allowed;
            transform: none;
        }
    </style>
</head>

<body>
    <!-- NAVBAR -->
    <nav class="navbar">
        <div class="logo-title">
            <div class="logo-small"></div>
            <span>Sistema de Inventario</span>
        </div>
        <div class="nav-links">
            <a href="http://localhost:5000/create_defect">Reportar Daño</a>
        </div>
    </nav>

    <div class="container">
        <div class="card">
            <div class="logo"></div>
            <h1>Sistema de Inventario</h1>
            <p class="subtitle">Escribe o pega los EPCs — verás en vivo qué artículos y clientes se están leyendo</p>

            <textarea id="epcInput" placeholder="Pega EPCs aquí (uno por línea o separados por coma)..."></textarea>
            <div class="counter" id="uniqueCounter">0 IDs únicos</div>

            <div class="stats">
                <div><span id="total">0</span> Total</div>
                <div><span id="found">0</span> Encontrados</div>
                <div><span id="notfound">0</span> No encontrados</div>
            </div>

            <div class="summary" id="summary">
                <span class="loading">Escribe algunos EPCs para comenzar...</span>
            </div>

            <div class="actions">
                <button id="btnRecoleccion" class="btn" disabled>Crear Recolección</button>
                <button id="btnEntrega" class="btn" disabled>Crear Entrega</button>
            </div>
        </div>
    </div>

    <!-- El script permanece exactamente igual -->
    <script>
        const textarea = document.getElementById('epcInput');
        const uniqueCounter = document.getElementById('uniqueCounter');
        const totalSpan = document.getElementById('total');
        const foundSpan = document.getElementById('found');
        const notfoundSpan = document.getElementById('notfound');
        const summaryDiv = document.getElementById('summary');
        const btnRecoleccion = document.getElementById('btnRecoleccion');
        const btnEntrega = document.getElementById('btnEntrega');

        let debounceTimer;
        let currentResults = [];
        let currentEPCs = [];

        function getFormattedDateTime() {
            const now = new Date();
            const day = String(now.getDate()).padStart(2, '0');
            const month = String(now.getMonth() + 1).padStart(2, '0');
            const year = now.getFullYear();
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            return `${day}.${month}.${year} ${hours}:${minutes}`;
        }

        function extractUniqueEPCs(text) {
            const lines = text.split(/\r?\n/).map(l => l.trim()).filter(Boolean);
            const all = [];
            lines.forEach(line => {
                line.split(',').map(p => p.trim()).filter(Boolean).forEach(p => all.push(p));
            });
            return [...new Set(all)];
        }

        async function lookupEPCs(epcs) {
            if (epcs.length === 0) return [];
            try {
                const res = await fetch('/api/lookup', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ epcs })
                });
                if (!res.ok) throw new Error('Error de red');
                return await res.json();
            } catch (err) {
                console.error(err);
                return epcs.map(epc => ({ epc, found: false, error: true }));
            }
        }

        function buildPayload(results, originalEPCs) {
            const payload = {
                timestamp: getFormattedDateTime(),
                items: {}
            };

            const length = Math.min(results.length, originalEPCs.length);

            for (let i = 0; i < length; i++) {
                const r = results[i];
                const epc = originalEPCs[i];

                if (r.found && r.client && r.article) {
                    const client = r.client;
                    const article = r.article;

                    if (!payload.items[client]) payload.items[client] = {};
                    if (!payload.items[client][article]) {
                        payload.items[client][article] = { count: 0, epcs: [] };
                    }

                    payload.items[client][article].count += 1;
                    payload.items[client][article].epcs.push(epc);
                }
            }

            const hasItems = Object.keys(payload.items).length > 0;
            return { payload, hasItems };
        }

        function buildSummary(results) {
            const summary = {};
            const notFound = [];

            results.forEach(r => {
                if (r.found && r.client && r.article) {
                    if (!summary[r.client]) summary[r.client] = {};
                    summary[r.client][r.article] = (summary[r.client][r.article] || 0) + 1;
                } else if (!r.found && r.epc) {
                    notFound.push(r.epc);
                }
            });

            const lines = [];
            for (const [client, articles] of Object.entries(summary)) {
                for (const [article, count] of Object.entries(articles)) {
                    const plural = count > 1 ? 's' : '';
                    lines.push(`${count} ${article}${plural} de ${client}`);
                }
            }

            const timestamp = getFormattedDateTime();

            if (lines.length === 0) {
                return notFound.length > 0
                    ? `${timestamp}\nSe leyeron ${notFound.length} EPC(s), pero ninguno está registrado.`
                    : 'Escribe algunos EPCs para comenzar...';
            }

            return `${timestamp} se contaron:\n\n${lines.join('\n')}`;
        }

        async function createOperation(endpoint) {
            if (currentEPCs.length === 0) {
                alert('No hay EPCs para registrar.');
                return;
            }

            const { payload, hasItems } = buildPayload(currentResults, currentEPCs);

            if (!hasItems) {
                alert('No hay artículos encontrados para registrar.');
                return;
            }

            try {
                const res = await fetch(`/api/${endpoint}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (res.ok) {
                    alert(`¡${endpoint === 'recoleccion' ? 'Recolección' : 'Entrega'} creada correctamente!`);
                } else {
                    const errorText = await res.text();
                    alert(`Error: ${errorText || 'Servidor rechazó la solicitud'}`);
                }
            } catch (err) {
                console.error(err);
                alert('Error de conexión.');
            }
        }

        async function updateEverything() {
            const text = textarea.value;
            const uniqueEPCs = extractUniqueEPCs(text);
            currentEPCs = uniqueEPCs;

            uniqueCounter.textContent = `${uniqueEPCs.length} ID${uniqueEPCs.length === 1 ? '' : 's'} único${uniqueEPCs.length === 1 ? '' : 's'}`;
            totalSpan.textContent = uniqueEPCs.length;

            if (uniqueEPCs.length === 0) {
                summaryDiv.innerHTML = '<span class="loading">Escribe algunos EPCs para comenzar...</span>';
                foundSpan.textContent = '0';
                notfoundSpan.textContent = '0';
                btnRecoleccion.disabled = true;
                btnEntrega.disabled = true;
                return;
            }

            summaryDiv.innerHTML = '<span class="loading">Consultando base de datos...</span>';

            const results = await lookupEPCs(uniqueEPCs);
            currentResults = results;

            let foundCount = 0;
            results.forEach(r => {
                if (r.found && r.client && r.article) foundCount++;
            });

            const notFoundCount = uniqueEPCs.length - foundCount;

            foundSpan.textContent = foundCount;
            notfoundSpan.textContent = notFoundCount;

            const summaryText = buildSummary(results);
            summaryDiv.textContent = summaryText;

            const hasItems = foundCount > 0;
            btnRecoleccion.disabled = !hasItems;
            btnEntrega.disabled = !hasItems;
        }

        btnRecoleccion.addEventListener('click', () => createOperation('recoleccion'));
        btnEntrega.addEventListener('click', () => createOperation('entrega'));

        textarea.addEventListener('input', () => {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(updateEverything, 600);
        });

        updateEverything();
    </script>
</body>

</html>